{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "paths": {
      "~/*": [
        "./*"
      ],
      "@/*": [
        "./*"
      ],
    },
    "types": [
      "../dist/module",
    ]
  },
  "include": [
    "./components/**/*.vue",
    "./pages/**/*.vue",
    "./nuxt.config.ts",
    "./volar-component-types.d.ts",
    "../types/*.ts",
    "../dist/module",
  ],
  "vueCompilerOptions": {
    "target": 2.7,
    "strictTemplates": true,
    "experimentalAdditionalLanguageModules": ["../dist/volar.cjs"],
    "experimentalModelPropName": {
      "": {
        "input": {
          "type": "radio"
        }
      },
      "checked": {
        "input": {
          "type": "checkbox"
        }
      },
      "value": {
        "input": true,
        "select": true,
        "textarea": true
      },
      "msg": {
        "my-model": true
      }
    }
  }
}
