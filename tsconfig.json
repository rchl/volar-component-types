{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noErrorTruncation": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "types": [
      "@nuxt/types",
    ]
  },
  "include": [
    "src/**/*.ts",
    "build.config.ts",
    "types/*.ts",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "src/module/templates/**/*.ejs",
  ],
}
